<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="eventLogger" class="ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="FileEventLogger"
          init-method="init">
        <constructor-arg value="src/main/resources/eventLogger.txt"/>
    </bean>

    <bean id="cashFileLogger" class="CashFileLogger" parent="fileEventLogger"
          destroy-method="destroy">
        <constructor-arg type="int" value="1"/>
    </bean>

</beans>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat"
          factory-method="getDateTimeInstance"/>

    <bean id="event" class="Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="eventLogger" class="ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="FileEventLogger"
          init-method="init">
        <constructor-arg value="src/main/resources/eventLogger.txt"/>
    </bean>

    <bean id="cashFileLogger" class="CashFileLogger"
          init-method="init"
          destroy-method="destroy">
        <constructor-arg type="int" value="1"/>
        <constructor-arg value="src/main/resources/eventLogger.txt"/>
    </bean>

    <bean id="app" class="App">
        <constructor-arg ref="client"/>
        <!--        <constructor-arg ref="eventLogger"/>-->
<!--        <constructor-arg ref="fileEventLogger"/>-->
        <constructor-arg ref="cashFileLogger"/>
    </bean>

</beans>